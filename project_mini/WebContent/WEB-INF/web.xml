	<!-- MemberJoinServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberJoin</servlet-name>
		<url-pattern>/memberJoin</url-pattern>
	</servlet-mapping>
	
	<!-- MemberUpdateServlet 객체 등록 -->
	<servlet>
		<servlet-name>memberUpdate</servlet-name>
		<servlet-class>member.servlet.MemberUpdateServlet</servlet-class> <!-- Servlet파일 경로 -->
	</servlet>
	<!-- MemberUpdateServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberUpdate</servlet-name>
		<url-pattern>/memberUpdate</url-pattern>
	</servlet-mapping>
	
	<!-- MemberDeleteServlet 객체 등록 -->
	<servlet>
		<servlet-name>memberDelete</servlet-name>
		<servlet-class>member.servlet.MemberDeleteServlet</servlet-class> <!-- Servlet파일 경로 -->
	</servlet>
	<!-- MemberUpdateServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberDelete</servlet-name>
		<url-pattern>/memberDelete</url-pattern>
	</servlet-mapping>
	
	<!-- MemberIdCheckServlet 객체 등록 -->
	<servlet>
		<servlet-name>memberIdCheck</servlet-name>
		<servlet-class>member.servlet.MemberIdCheckServlet</servlet-class> <!-- Servlet파일 경로 -->
	</servlet>
	<!-- MemberIdCheckServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberIdCheck</servlet-name>
		<url-pattern>/memberIdCheck</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	<!--===============================게시판 관리 ===========================================  -->
		<context-param>
			<param-name>rootPath</param-name>
			<param-value>/project_mini</param-value>
		</context-param>
		
	<servlet>
		<servlet-name>InsertController</servlet-name>
		<servlet-class>board.controller.InsertController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InsertController</servlet-name>
		<url-pattern>/InsertController</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SelectController</servlet-name>
		<servlet-class>board.controller.SelectController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SelectController</servlet-name>
		<url-pattern>/SelectController</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>ModifyController</servlet-name>
		<servlet-class>board.controller.ModifyController</servlet-class>
	</servlet>
	<servlet-mapping>
