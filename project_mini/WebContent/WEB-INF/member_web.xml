		<servlet-class>member.servlet.MemberDeleteServlet</servlet-class> <!-- Servlet파일 경로 -->
	</servlet>
	<!-- MemberUpdateServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberDelete</servlet-name>
		<url-pattern>/memberDelete</url-pattern>
	</servlet-mapping>
	
	<!-- MemberIdCheckServlet 객체 등록 -->
	<servlet>
		<servlet-name>memberIdCheck</servlet-name>
