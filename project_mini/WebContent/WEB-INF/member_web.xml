	<!-- MemberJoinServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberJoin</servlet-name>
		<url-pattern>/memberJoin</url-pattern>
	</servlet-mapping>
	
	<!-- MemberUpdateServlet 객체 등록 -->
	<servlet>
		<servlet-name>memberUpdate</servlet-name>
		<servlet-class>member.servlet.MemberUpdateServlet</servlet-class> <!-- Servlet파일 경로 -->
	</servlet>
	<!-- MemberUpdateServlet 경로 지정 -->
	<servlet-mapping>
		<servlet-name>memberUpdate</servlet-name>
